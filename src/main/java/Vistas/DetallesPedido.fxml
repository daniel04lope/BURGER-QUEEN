<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400" prefWidth="600" style="-fx-background-color: #B67777;" translateX="-7.0" translateY="-1.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="Controladores.DetallesPedidoController">
    <children>

        <!-- Tabla para mostrar los detalles del pedido -->
        <TableView fx:id="tablaDetalles" layoutX="24.0" layoutY="49.0" prefHeight="301.0" prefWidth="556.0" style="-fx-border-radius: 5px; -fx-background-radius: 5px;">
            <columns>
                <TableColumn fx:id="columnaNombre" prefWidth="448.0" style="-fx-border-radius: 5px; -fx-background-radius: 5px;" text="Nombre" />
                <TableColumn fx:id="columnaCantidad" prefWidth="111.0" style="-fx-background-radius: 5px; -fx-border-radius: 5px;" text="Cantidad" />
            </columns>
         <effect>
            <DropShadow offsetX="1.0" offsetY="2.0" />
         </effect>
        </TableView>

        <Button fx:id="cerrarVentana" layoutX="500" layoutY="360" onAction="#cerrarVentana" style="-fx-background-color: red;" text="Cerrar" textFill="WHITE">
         <font>
            <Font name="Insaniburger" size="12.0" />
         </font>
         <effect>
            <DropShadow offsetX="1.0" offsetY="2.0" />
         </effect></Button>
      <Label fx:id="Id" layoutX="247.0" layoutY="10.0" prefHeight="20.0" prefWidth="111.0" textFill="WHITE" translateX="55.0" translateY="10.0">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
         <effect>
            <DropShadow offsetX="1.0" offsetY="2.0" />
         </effect>
      </Label>
      <Label layoutX="280.0" layoutY="24.0" text="ID:" textFill="WHITE" translateX="-7.0">
         <font>
            <Font name="Insaniburger" size="20.0" />
         </font>
         <effect>
            <DropShadow offsetX="1.0" offsetY="2.0" />
         </effect>
      </Label>
      <Label layoutX="14.0" layoutY="12.0" text="DETALLES DEL PEDIDO" textFill="WHITE">
         <font>
            <Font name="Insaniburger" size="20.0" />
         </font>
         <effect>
            <DropShadow offsetX="1.0" offsetY="2.0" />
         </effect>
      </Label>
    </children>
</AnchorPane>
